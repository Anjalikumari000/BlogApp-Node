<main class = "container mx-auto mt-10">   
    <h2 class = "text-center text-3xl my-10">Read Explore and Create Blogs!</h2>
    <div class="flex justify-center gap-x-6">

        <% if (locals.blogs != null) { %>

            <% blogs.forEach(blog => {%> 

                <div class = "card flex flex-col gap-y-6 px-5 py-4 max-w-md shadow-lg shadow-slate-200 rounded-md border border-slate-200">   
                    <h2 class = "text-center text-xl"><%= blog.title %></h2>
                    <p><%= blog.content %></p>
                    <div class = "flex justify-end"> 
                        <p> - <%= blog.author %></p> 
                    </div>
                </div>

            <% }) %> 

        <% } %> 

    </div> 
</main>